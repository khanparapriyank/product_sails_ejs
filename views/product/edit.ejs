<%if(status === "Error") { %>
<div class="alert alert-danger" role="alert"><%=statusDescription%></div>
<% } %>
<%if(status !== "Error" || errorType === "validation-error" ) { %>
<form role="form" action="/product" method="post">
    <!-- This line below is to support PUT HTTP method. Works only in Express JS Server. It's cool-->
    
   <input type="hidden" name="_method" value="put">
   
  <div class="form-group">
    <label for="txtPid">Product ID</label>
    <input type="text" class="form-control" name="pid" id="txtPid" placeholder="Product ID" value="<%=product.pid%>" readonly>
  </div>
  <div class="form-group">
    <label for="txtName">Product Name</label>
    <input type="text" class="form-control" name="name" id="txtName" placeholder="Product Name" value="<%=product.name%>">
  </div>
  <div class="form-group">
    <label for="txtPrice">Product Price</label>
    <input type="text" class="form-control" name="price" id="txtPrice" placeholder="Product Price" value="<%=product.price%>">
  </div>
  <div class="form-group">
    <label for="txtProductImageUrl">Product Image URL</label>
    <input type="text" class="form-control" name="imageUrl" id="txtProductImageUrl" placeholder="Product Image URL" value="<%=product.productImageUrl%>">
  </div>
  <p></p>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
<% } %>